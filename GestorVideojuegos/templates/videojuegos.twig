{% extends "layout.twig" %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Videojuegos disponibles</h2>
</div>

{% if juegos is empty %}
    <div class="alert alert-info">
        No hay más juegos para añadir a tu colección.
    </div>
{% else %}
<table class="table table-gamer">
    <tr>
        <th>Título</th>
        <th>Plataforma</th>
        <th>Género</th>
        <th>Descripción</th>
        <th>Mi puntuación</th>
        <th>Media</th>
        <th>Acción</th>
    </tr>

    {% for j in juegos %}
    <tr>
        <td>{{ j.titulo }}</td>
        <td>{{ j.plataforma }}</td>
        <td>{{ j.genero }}</td>
        <td>{{ j.descripcion }}</td>
        <td>{{ j.mi_puntuacion|default('–') }}</td>
        <td>{{ j.media_puntuacion|default('–') }}</td>
        <td>
            <form method="post" action="add_coleccion.php">
                <input type="hidden" name="videojuego_id" value="{{ j.videojuego_id }}">
                <button class="btn btn-primary btn-sm">Añadir</button>
            </form>
        </td>
    </tr>
    {% endfor %}
</table>
{% endif %}
{% endblock %}