{% extends "layout.twig" %}

{% block title %}Mis amigos{% endblock %}

{% block content %}
<h2>Mis amigos</h2>

{% if mensaje %}
<div class="alert alert-info">{{ mensaje }}</div>
{% endif %}

<form method="post" class="mb-3">
    <input type="email" name="correo" class="form-control mb-2" placeholder="Correo del amigo a añadir" required>
    <button class="btn btn-success">Enviar solicitud</button>
</form>

{% if amigos is empty %}
<p>No tienes amigos todavía.</p>
{% else %}
<table class="table table-gamer">
    <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Ver colección</th>
    </tr>
    {% for a in amigos %}
    <tr>
        <td>{{ a.nombre }}</td>
        <td>{{ a.email }}</td>
        <td><a class="btn btn-primary btn-sm btn-add" href="perfil_amigo.php?id={{ a.id }}">Ver juegos</a></td>
    </tr>
    {% endfor %}
</table>
{% endif %}
{% endblock %}